<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="repository.beam.xbmc-addons" name="Beam XBMC Add-ons" version="1.0.0" provider-name="Beam">
	<extension point="xbmc.addon.repository" name="Beam XBMC Add-ons Repository">
		<info compressed="false">http://beam.github.io/repository.beam.xbmc-addons/addons.xml</info>
		<checksum>http://beam.github.io/repository.beam.xbmc-addons/addons.xml.md5</checksum>
		<datadir zip="true">http://beam.github.io/repository.beam.xbmc-addons/packages/</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>Beam XBMC Add-ons Repository</summary>
		<description>Add-ons created by Andrew Beam</description>
		<platform>all</platform>
		<source>https://github.com/beam/repository.beam.xbmc-addons</source>
		<email>ondra@bimovi.cz</email>
	</extension>
</addon>

<addon id="service.subtitles.serialzone.cz" name="SerialZone.cz" version="0.0.1" provider-name="Beam">
	<requires>
	    <import addon="xbmc.python" version="2.14.0"/>
	</requires>
	<extension point="xbmc.subtitle.module" library="service.py" />
	<extension point="xbmc.addon.metadata">
		<summary lang="en">SerialZone.cz</summary>
		<description lang="en">Search and download subtitles from serialzone.cz</description>
	</extension>
</addon>
</addons>
