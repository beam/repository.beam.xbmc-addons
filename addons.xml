<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="repository.beam.xbmc-addons" name="Beam XBMC Addons" version="1.0.0" provider-name="Beam">
	<extension point="xbmc.addon.repository" name="Beam XBMC Addons Reposity">
		<info compressed="false">https://github.com/beam/repository.beam.xbmc-addons/raw/master/addons.xml</info>
		<checksum>https://github.com/beam/repository.beam.xbmc-addons/raw/master/addons.xml.md5</checksum>
		<datadir zip="true">https://github.com/beam/repository.beam.xbmc-addons/raw/master/packages</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>Beam XBMC Addons Repository</summary>
		<description>Czech addons created by Andrew Beam</description>
		<platform>all</platform>
	</extension>
</addon>

<addon id="service.subtitles.serialzone.cz" name="SerialZone.cz" version="0.0.1" provider-name="beam">
	<requires>
	    <import addon="xbmc.python" version="2.14.0"/>
	</requires>
	<extension point="xbmc.subtitle.module" library="service.py" />
	<extension point="xbmc.addon.metadata">
		<summary lang="en">SerialZone.cz</summary>
		<description lang="en">Search and download subtitles from serialzone.cz</description>
	</extension>
</addon>
</addons>
