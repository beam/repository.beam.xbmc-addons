	</requires>
	<extension point="xbmc.service" library="service.py" start="login"/>
	<extension point="xbmc.addon.metadata">
		<summary lang="en">Turn off/on TV with screensaver</summary>
		<description lang="en">Turn off/on TV with screensaver</description>
		<source>https://github.com/beam/script.tvpower.screensaver.control</source>
		<email>ondra@bimovi.cz</email>
	</extension>
</addon>

